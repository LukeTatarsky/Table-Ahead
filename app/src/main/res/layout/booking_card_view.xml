<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="7dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/restImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:contentDescription="@string/descRestImage"
            android:scaleType="centerInside"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholderRestaurantName"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reservationConfirmed"
            android:textAlignment="center" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            tools:layout_editor_absoluteY="116dp">

            <ImageView
                android:id="@+id/iconPerson"
                android:layout_width="37dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="@string/descPartIcon"
                android:src="@drawable/people"
                app:layout_constraintBottom_toBottomOf="@+id/txtParty"
                app:layout_constraintEnd_toStartOf="@+id/iconDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtParty" />

            <TextView
                android:id="@+id/txtParty"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:contentDescription="@string/descBookingParty"
                android:gravity="center"
                android:text="@string/placeHolderPartSize"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/iconDate"
                app:layout_constraintStart_toEndOf="@+id/iconPerson"
                app:layout_constraintTop_toTopOf="@+id/iconDate"
                tools:ignore="VisualLintBounds" />

            <ImageView
                android:id="@+id/iconDate"
                android:layout_width="53dp"
                android:layout_height="32dp"
                android:contentDescription="@string/descDateIcon"
                android:src="@android:drawable/ic_menu_my_calendar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtBookDate"
                app:layout_constraintStart_toEndOf="@+id/iconPerson"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="VisualLintBounds,ImageContrastCheck" />

            <TextView
                android:id="@+id/txtBookDate"
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:contentDescription="@string/descBookingDate"
                android:gravity="center"
                android:text="@string/placeHolderDate"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/txtBookTime"
                app:layout_constraintEnd_toStartOf="@+id/txtBookTime"
                app:layout_constraintStart_toEndOf="@+id/iconDate"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/txtBookTime"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/descBookingTime"
                android:gravity="center"
                android:text="@string/placeHolderTime"
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/iconDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtBookDate"
                app:layout_constraintTop_toTopOf="@+id/iconDate"
                tools:ignore="VisualLintBounds" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>